    </ul>
    </aside>
  <!--end sidebar -->

  <!--start content-->
  <main class="page-content">
    <!--breadcrumb-->
    <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
      <div class="breadcrumb-title pe-3">eCommerce</div>
      <div class="ps-3">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-0 p-0">
            <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Add New Product</li>
          </ol>
        </nav>
      </div>
      <div class="ms-auto">
        <div class="btn-group">
          <button type="button" class="btn btn-primary">Settings</button>
          <button type="button" class="btn btn-primary split-bg-primary dropdown-toggle dropdown-toggle-split"
            data-bs-toggle="dropdown"> <span class="visually-hidden">Toggle Dropdown</span>
          </button>
          <div class="dropdown-menu dropdown-menu-right dropdown-menu-lg-end"> <a class="dropdown-item"
              href="javascript:;">Action</a>
            <a class="dropdown-item" href="javascript:;">Another action</a>
            <a class="dropdown-item" href="javascript:;">Something else here</a>
            <div class="dropdown-divider"></div> <a class="dropdown-item" href="javascript:;">Separated link</a>
          </div>
        </div>
      </div>
    </div>
    <!--end breadcrumb-->

    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="card">
          <div class="card-header py-3 bg-transparent">
            <h5 class="mb-0">Thêm sản phẩm</h5>
            <% if(success){ %> 
            <div class="alert alert-success">
              <strong><%= success %> </strong>
            </div>
            <% } %>             
          </div>
          <div class="card-body">
            <div class="border p-3 rounded">
              <form class="row g-3" method="POST" action="/add-product" enctype="multipart/form-data">
                <div class="col-12">
                  <label class="form-label">Tiêu đề</label>
                  <input type="text" class="form-control" placeholder="Product title" name="title">
                </div>
                <div class="col-12">
                  <label class="form-label">Màu sắc</label>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="white" value="White" name="color">
                    <label class="form-check-label" for="white">White</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="black" value="Black" name="color">
                    <label class="form-check-label" for="black">Black</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="grey" value="Grey" name="color">
                    <label class="form-check-label" for="grey">Grey</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="color-natural" value="Natural" name="color">
                    <label class="form-check-label" for="color-natural">Natural</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="blue" value="Blue" name="color">
                    <label class="form-check-label" for="blue">Blue</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="silver" value="Silver" name="color">
                    <label class="form-check-label" for="silver">Silver</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="gold" value="Gold" name="color">
                    <label class="form-check-label" for="gold">Gold</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="multi-clored" value="Multi Colored" >
                    <label class="form-check-label" for="multi-colored">Multi Colored</label>
                  </div>
                </div>
                <div class="col-12">
                  <label class="form-label">Ảnh ngoài</label>
                  <input class="form-control" type="file" name="cover">
                </div>
                <div class="col-12">
                  <label class="form-label">Ảnh mô tả</label>
                  <input class="form-control" type="file" multiple="multiple" name="img">
                </div>
                <div class="col-12">
                  <label class="form-label">Size</label>
                  <textarea class="form-control" name="size" placeholder="Size" rows="5" cols="4"></textarea>
                </div>
                <div class="col-12">
                  <label class="form-label">Chất liệu</label><br>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="material" id="fiberstone" value="Fiberstone">
                    <label class="form-check-label" for="fiberstone">Fiberstone</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="handpainting" value="Handpainting" name="material">
                    <label class="form-check-label" for="handpainting">Handpainting</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="rough-cement" value="Rough Cement" name="material">
                    <label class="form-check-label" for="rough-cement">Rough Cement</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="outdoor-painting" value="Outdoor Painting" name="material">
                    <label class="form-check-label" for="outdoor-painting">Outdoor Painting</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="natural" value="Natural" name="material">
                    <label class="form-check-label" for="natural">Natural</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="washed" value="Washed" name="material">
                    <label class="form-check-label" for="washed">Washed</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="charcoalstone" value="Charcoalstone" name="material">
                    <label class="form-check-label" for="charcoalstone">Charcoalstone</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="atlantis" value="Atlantis" name="material">
                    <label class="form-check-label" for="atlantis">Atlantis</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="heritage" value="Heritage" name="material">
                    <label class="form-check-label" for="heritage">Heritage</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="sandstone" value="Sandstone" name="material">
                    <label class="form-check-label" for="sandstone">Sandstone</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="stone-cement" value="Stone Cement" name="material">
                    <label class="form-check-label" for="stone-cement">Stone Cement</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="terrazzo" value="Terrazzo" name="material">
                    <label class="form-check-label" for="terrazzo">Terrazzo</label>
                  </div>
                </div>
                <div class="col-12">
                  <label class="form-label">Hình dáng</label><br>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="shape" id="round" value="Round">
                    <label class="form-check-label" for="round">Round</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="shape" id="square" value="Square">
                    <label class="form-check-label" for="square">Square</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="shape" id="rectangular" value="Rectangular">
                    <label class="form-check-label" for="rectangular">Rectangular</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="shape" id="oval" value="Oval">
                    <label class="form-check-label" for="oval">Oval</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="shape" id="egg" value="Egg">
                    <label class="form-check-label" for="egg">Egg</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="shape" id="octagonal" value="Octagonal">
                    <label class="form-check-label" for="octagonal">Octagonal</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="shape" id="other" value="Other">
                    <label class="form-check-label" for="other">Other</label>
                  </div>
                </div>
                <div class="col-12">
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="bestselling" value="Best-Selling" name="page">
                    <label class="form-check-label" for="bestselling">Best-Selling</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="new" value="New" name="page">
                    <label class="form-check-label" for="new">New</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="none" value="None" name="page">
                    <label class="form-check-label" for="none">None</label>
                  </div>
                </div>
                <div class="col-12">
                  <button class="btn btn-primary px-4" type="submit">Submit Item</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--end row-->

  </main>
  <!--end page main-->
  <!--start overlay-->
  <div class="overlay nav-toggle-icon"></div>
  <!--end overlay-->

  <!--Start Back To Top Button-->
  <a href="javaScript:;" class="back-to-top"><i class='bx bxs-up-arrow-alt'></i></a>
  <!--End Back To Top Button-->

  <!--start switcher-->
  <div class="switcher-body">
    <button class="btn btn-primary btn-switcher shadow-sm" type="button" data-bs-toggle="offcanvas"
      data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling"><i
        class="bi bi-paint-bucket me-0"></i></button>
    <div class="offcanvas offcanvas-end shadow border-start-0 p-2" data-bs-scroll="true" data-bs-backdrop="false"
      tabindex="-1" id="offcanvasScrolling">
      <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Theme Customizer</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas"></button>
      </div>
      <div class="offcanvas-body">
        <h6 class="mb-0">Theme Variation</h6>
        <hr>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="shape" id="LightTheme" value="option1"
            checked>
          <label class="form-check-label" for="LightTheme">Light</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="shape" id="DarkTheme" value="option2">
          <label class="form-check-label" for="DarkTheme">Dark</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="shape" id="SemiDarkTheme" value="option3">
          <label class="form-check-label" for="SemiDarkTheme">Semi Dark</label>
        </div>
        <hr>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="shape" id="MinimalTheme" value="option3">
          <label class="form-check-label" for="MinimalTheme">Minimal Theme</label>
        </div>
        <hr />
        <h6 class="mb-0">Header Colors</h6>
        <hr />
        <div class="header-colors-indigators">
          <div class="row row-cols-auto g-3">
            <div class="col">
              <div class="indigator headercolor1" id="headercolor1"></div>
            </div>
            <div class="col">
              <div class="indigator headercolor2" id="headercolor2"></div>
            </div>
            <div class="col">
              <div class="indigator headercolor3" id="headercolor3"></div>
            </div>
            <div class="col">
              <div class="indigator headercolor4" id="headercolor4"></div>
            </div>
            <div class="col">
              <div class="indigator headercolor5" id="headercolor5"></div>
            </div>
            <div class="col">
              <div class="indigator headercolor6" id="headercolor6"></div>
            </div>
            <div class="col">
              <div class="indigator headercolor7" id="headercolor7"></div>
            </div>
            <div class="col">
              <div class="indigator headercolor8" id="headercolor8"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--end switcher-->

  </div>
  <!--end wrapper-->


  <!-- Bootstrap bundle JS -->
  <script src="/javascripts/js/bootstrap.bundle.min.js"></script>
  <!--plugins-->
  <script src="/javascripts/js/jquery.min.js"></script>
  <script src="/javascripts/plugins/simplebar/js/simplebar.min.js"></script>
  <script src="/javascripts/plugins/metismenu/js/metisMenu.min.js"></script>
  <script src="/javascripts/plugins/perfect-scrollbar/js/perfect-scrollbar.js"></script>
  <script src="/javascripts/js/pace.min.js"></script>
  <!--app-->
  <script src="/javascripts/js/app.js"></script>


  </body>

  </html>