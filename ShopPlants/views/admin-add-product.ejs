    <!--navigation-->
    <ul class="metismenu" id="menu">
      <li>
        <a href="/products">
          <div class="parent-icon"><i class="bi bi-box-seam"></i>
          </div>
          <div class="menu-title">Sản phẩm</div>
        </a>
      </li>
      <li>
