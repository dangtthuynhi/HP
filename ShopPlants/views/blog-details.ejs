<% include header %>
    <!--breadcrumbs area start-->
    <div class="breadcrumbs_area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb_content">
                        <ul>
                            <li><a href="/">home</a></li>
                            <li>blog details</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--breadcrumbs area end-->

    <!--blog body area start-->
    <div class="blog_details">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <!--blog grid area start-->
                    <div class="blog_wrapper blog_wrapper_details">
                        <% if(blog){blog.forEach(function(x){ %> 
                        <article class="single_blog">
                            <figure>
                                <div class="post_header">
                                    <h3 class="post_title"><%=x.Ttile%></h3>
                                    <div class="blog_meta">
                                        <p>Posted by : admin / On : <%=x.Date%> </p>  
                                    </div>
                                </div>
                                <div class="blog_thumb">
                                    <a href="#"><img src="/public/uploads/<%=x.Cover%>" alt=""></a>
                                </div>
                                <figcaption class="blog_content">
                                    <div class="post_content">
                                        <%-x.Content%> 
                                    </div>
                                    <div class="entry_content">

                                        <div class="social_sharing">
                                            <p>share this post:</p>
                                            <ul>
                                                <li><a href="https://www.facebook.com/sharer/sharer.php?u=<%=url%>" target="_blank"
                                                    title="facebook"><i class="fa fa-facebook"></i></a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </figcaption>
                            </figure>
                        </article>
                        <% })} %> 

                    </div>
                    <!--blog grid area start-->
                </div>
            </div>
        </div>
    </div>
    <!--blog section area end-->

    <!--brand area start-->
    <div class="brand_area color_five">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="brand_container owl-carousel">
                        <% if(ds){ds.forEach(function(x){x.forEach(function(y){ %> 
                            <div class="single_brand">
                                <a href="/product-details.<%=y._id%>"><img src="/public/uploads/<%=y.Cover%>" alt=""></a>
                                <figcaption class="product_content">
                                        <h4 class="product_name"><a href="/blog-details.<%=y._id%>"><%=y.Title%></a></h4>
                                </figcaption>
                            </div>
                            <% })})} %> 
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--brand area end-->
<% include footer %> 
    <!-- JS
============================================ -->
    <!--jquery min js-->
    <script src="/javascripts/js/vendor/jquery-3.4.1.min.js"></script>
    <!--popper min js-->
    <script src="/javascripts/js/popper.js"></script>
    <!--bootstrap min js-->
    <script src="/javascripts/js/bootstrap.min.js"></script>
    <!--owl carousel min js-->
    <script src="/javascripts/js/owl.carousel.min.js"></script>
    <!--slick min js-->
    <script src="/javascripts/js/slick.min.js"></script>
    <!--magnific popup min js-->
    <script src="/javascripts/js/jquery.magnific-popup.min.js"></script>
    <!--counterup min js-->
    <script src="/javascripts/js/jquery.counterup.min.js"></script>
    <!--jquery countdown min js-->
    <script src="/javascripts/js/jquery.countdown.js"></script>
    <!--jquery ui min js-->
    <script src="/javascripts/js/jquery.ui.js"></script>
    <!--jquery elevatezoom min js-->
    <script src="/javascripts/js/jquery.elevatezoom.js"></script>
    <!--isotope packaged min js-->
    <script src="/javascripts/js/isotope.pkgd.min.js"></script>
    <!--slinky menu js-->
    <script src="/javascripts/js/slinky.menu.js"></script>
    <!-- Plugins JS -->
    <script src="/javascripts/js/plugins.js"></script>

    <!-- Main JS -->
    <script src="/javascripts/js/main.js"></script>



</body>

</html>