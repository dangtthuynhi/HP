                                        <div class="product_price_rating">
                                            <h4 class="product_name"><a href="/product-details.<%=x._id%>"><%=x.Title%></a></h4>
                                        </div>
                                    </div>
                                    <div class="product_content list_content">
                                        <h4 class="product_name"><a href="/product-details.<%=x._id%>"><%=x.Title%></a>
                                        </h4>
                                    </div>
